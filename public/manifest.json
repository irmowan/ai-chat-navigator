{
  "manifest_version": 3,
  "name": "AI Turn Navigator",
  "version": "1.0.0",
  "description": "Navigate AI conversations with a floating sidebar for ChatGPT, Gemini, and more",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*"
      ],
      "js": ["src/content/index.ts"]
    }
  ]
}
