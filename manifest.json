{
  "manifest_version": 3,
  "name": "AI Chat Navigator",
  "version": "1.0.0",
  "description": "Navigate and locate your queries across ChatGPT, Copilot, and Gemini conversations",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://copilot.microsoft.com/*",
        "https://copilot.cloud.microsoft/*",
        "https://m365.cloud.microsoft/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/i18n.js",
        "src/adapters/base-adapter.js",
        "src/adapters/chatgpt-adapter.js",
        "src/adapters/copilot-adapter.js",
        "src/adapters/gemini-adapter.js",
        "src/platform-detector.js",
        "src/sidebar.js",
        "src/navigator.js",
        "content.js"
      ],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
